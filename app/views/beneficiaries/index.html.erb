<div class="container">

<div class="search-bar">
  <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
  <input class="beni-search-text" type="text" placeholder="Find a Beneficiary">
</div>

<h4>Search By</h4>
<form action="" method="">
  <input type="checkbox" name="vehicle" value="In Need of Donors"> In Need of Donors<br>
  <input type="checkbox" name="vehicle" value="In Need of Resources"> In Need of Resources<br>
</form>
  <div class="row">
    <!-- <div class="col-lg-2 col-md-2"></div> -->
    <div class="col-lg-12 col-md-12">


      <table class="table">
        <tr class="table-head">
          <td>Name</td>
          <td># of Requested Resources</td>
          <td># of Donors</td>
          <td>Contact Information</td>
        </tr>
        <% @beneficiaries.each do |beneficiary| %>
          <tr class="beni-row">
            <td class="beni-name"><%= beneficiary.name %></td>
            <td><%= beneficiary.requested_resources.where(fulfilled: false).count %></td>
            <td><%= beneficiary.count_donors %> </td>
            <td> <%= link_to("Contact", beneficiary) %> </td>
          </tr>
        <% end %>

    </tbody>
  </table>
    <div class="no-results alert alert-danger">No Search Results Found</div>
  </div>

  </div>
</div>